@charset "utf-8";
/* CSS Document */

#contenedor {
	margin: 0px 5px 0px 5px;
	height: 151px;
	width: 95px;
	font-family: Arial, Helvetica, sans-serif;
	text-decoration: none;
	display: block;
	line-height: 80%;
	text-align: center;
	background-image: url(../imagenes/globo/globo.png);
	padding-top: 8px;
	background-repeat: no-repeat;
	background-position: center;
}
.contenedor_top  {
	background-image: url(../imagenes/globo/f_g_01.jpg);
	background-repeat: no-repeat;
	background-position: center;
	height: 6px;
	width: 95px;
	display: block;
}

.perfil {
	height: 72px;
	width: 72px;
	margin: 2px;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
}
h1  {
	font-size: 7pt;
	color: #FFF;
	text-align: center;
}
img  {
	margin: 0px 2px;
}
h4  {
	font-size: 7pt;
	color: #FFF;
}
.contenedor_bot {
	background-image: url(../imagenes/globo/f_g_03.jpg);
	background-repeat: no-repeat;
	background-position: center;
	height: 6px;
	width: 95px;
	display: block;
}
.bandera {
	padding-right: 2px;
	padding-left: 2px;
}
#contenedorsel {
	margin: 0px 5px 0px 5px;
	height: 151px;
	width: 95px;
	font-family: Arial, Helvetica, sans-serif;
